<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/limparButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="limpar"
        android:text="REINICIAR" />

    <Button
        android:id="@+id/sortearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="sortearBola"
        android:text="SORTEAR" />

    <TextView
        android:id="@+id/bolaSorteadaTextView"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:textAlignment="center"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listaBolasSorteadasListView"
            android:layout_width="192dp"
            android:layout_height="match_parent" />

        <ListView
            android:id="@+id/listaBolasDisponiveisListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>